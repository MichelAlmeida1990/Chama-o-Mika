{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/gestao/wsgi.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/gestao/wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/backend/gestao/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/gestao/wsgi.py"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/backend/gestao/wsgi.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}




